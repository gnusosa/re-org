#!/usr/bin/env ruby
# -*- mode: ruby -*-
require 'docopt'
require 're-org'

doc = <<OPTIONS

re-org : A tool to help re-organize your texts written in Org mode

Usage:
  re-org new <template> [--notebook=<notebook>] [--title=<title>] [--path=<path>]
  re-org setup          [--notebook=<notebook>] [--path=<path>]
  re-org notebook <notebook>    [--path=<path>]

Options:

  -h --help               Show this screen.
  --version               Show this version.

OPTIONS

begin
  require "pp"
  cmd = Docopt::docopt(doc)
rescue Docopt::Exit => e
  puts e.message
end

exit 1 unless cmd

o = ReOrg::Command.new(cmd)
o.execute!
